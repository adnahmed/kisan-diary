{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "name": "Client",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/public/build",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "pathMappings": [
                {
                    "url": "http://localhost:3000/node_modules/.pnpm/object-assign@4.1.1/node_modules/object-assign",
                    "path": "${workspaceFolder}/build"
                },
                {
                    "url": "http://localhost:3000/app",
                    "path": "${workspaceFolder}/app"
                }
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "cwd": "${workspaceFolder}/build",
            "outFiles": [
                "${workspaceFolder}/build/**",
                "!**/node_modules/**"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Server/Client",
            "configurations": [
                "Server",
                "Client",
            ],
            "stopAll": true
        }
    ]
}