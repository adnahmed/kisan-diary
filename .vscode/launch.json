{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "name": "Client_Firefox",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/public/build",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "pathMappings": [
                {
                    "url": "http://localhost:3000/",
                    "path": "${workspaceFolder}/public/build"
                }
            ]
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Client_Edge",
            "url": "http://localhost:3000",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}/public/build",
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "cwd": "${workspaceFolder}/build",
            "outFiles": [
                "${workspaceFolder}/build/**",
                "!**/node_modules/**"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "vite:dev"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Server/ClientE",
            "configurations": [
                "Server",
                "Client_Edge",
            ],
            "stopAll": true
        },
        {
            "name": "Server/ClientF",
            "configurations": [
                "Server",
                "Client_Firefox",
            ],
            "stopAll": true
        }
    ]
}